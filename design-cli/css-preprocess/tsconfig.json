{
  "extends": "@rchitect-cli/tsconfig/base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["dom", "esnext", "ES6"],
    "types": [
      "vite/client",
      "reflect-metadata"
    ]
  },
  "include": [
    "src",
    "mock",
    "vite.config.ts"
  ],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
